import React, { useState } from 'react';

const BCALanding = () => {
  const [message, setMessage] = useState('');
  const [isLoading, setIsLoading] = useState(false);

  const sendMessage = async () => {
    if (!message.trim()) return;
    
    setIsLoading(true);
    try {
      const response = await fetch('/tenant/bca/chat', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          message: message,
          tenant_id: 'bca',
          user_id: 'customer_' + Date.now(),
          session_id: 'session_' + Date.now()
        })
      });
      
      const data = await response.json();
      console.log('Response:', data);
      alert('Response: ' + JSON.stringify(data, null, 2));
    } catch (error) {
      console.error('Error:', error);
      alert('Error: ' + error);
    }
    setIsLoading(false);
  };

  return (
    <div className="min-h-screen bg-blue-50">
      {/* Header */}
      <header className="bg-blue-600 text-white p-4">
        <div className="max-w-2xl mx-auto flex items-center justify-between">
          <h1 className="text-xl font-bold">Bank Central Asia</h1>
          <span className="text-sm">Customer Service</span>
        </div>
      </header>

      {/* Main Content */}
      <div className="max-w-2xl mx-auto p-4">
        <div className="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 className="text-2xl font-bold text-gray-900 mb-4">
            Selamat datang di BCA
          </h2>
          <p className="text-gray-600 mb-4">
            Ada yang bisa saya bantu? Tanya tentang produk, layanan, atau informasi perbankan.
          </p>
        </div>

        {/* Chat Interface */}
        <div className="bg-white rounded-lg shadow-md p-6">
          <h3 className="text-lg font-semibold mb-4">Chat dengan Customer Service BCA</h3>
          
          <div className="space-y-4">
            <textarea
              value={message}
              onChange={(e) => setMessage(e.target.value)}
              placeholder="Ketik pertanyaan Anda tentang BCA..."
              className="w-full p-3 border border-gray-300 rounded-lg resize-none"
              rows={3}
            />
            
            <button
              onClick={sendMessage}
              disabled={isLoading || !message.trim()}
              className="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 disabled:bg-gray-400"
            >
              {isLoading ? 'Mengirim...' : 'Kirim Pesan'}
            </button>
          </div>
          
          <div className="mt-4 text-sm text-gray-500">
            <p>Contoh pertanyaan:</p>
            <ul className="list-disc list-inside mt-2 space-y-1">
              <li>Apa itu TabunganKu?</li>
              <li>Bagaimana cara buka rekening?</li>
              <li>Berapa minimal setoran TabunganKu?</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  );
};

export default BCALanding;
