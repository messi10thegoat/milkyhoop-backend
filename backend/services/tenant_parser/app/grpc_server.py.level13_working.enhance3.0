async def serve() -> None:
    listen_addr = f"[::]:{settings.GRPC_PORT}"
    server = aio.server()
    
    servicer = TenantParserServicer()
    pb_grpc.add_IntentParserServiceServicer_to_server(servicer, server)
    
    health_servicer = health.HealthServicer()
    health_pb2_grpc.add_HealthServicer_to_server(health_servicer, server)
    health_servicer.set("tenant_parser.IntentParserService", health_pb2.HealthCheckResponse.SERVING)
    
    server.add_insecure_port(listen_addr)
    
    logger.info("üöÄ Level 13 Production-Optimized Tenant Parser listening on port %s", settings.GRPC_PORT)
    logger.info(f"üß† Level 13 Intelligence: {'‚úÖ Available' if LEVEL13_AVAILABLE else '‚ùå Unavailable'}")
    logger.info("‚ö° OPTIMIZED: Channel reuse, parallel calls, timeouts, pipeline")
    logger.info("üåê GENERIC: Works with ANY tenant")
    logger.info("üîß JSON SERIALIZATION: Fixed with sanitize_protobuf_for_json()")
    
    await server.start()

    def handle_shutdown(*_):
        logger.info("üõë Shutting down Level 13 Optimized Tenant Parser...")
        # Cleanup channels
        asyncio.create_task(servicer._cleanup_channels())
        asyncio.create_task(server.stop(grace=10.0))

    for sig in (signal.SIGTERM, signal.SIGINT):
        signal.signal(sig, handle_shutdown)

    await server.wait_for_termination()

if __name__ == "__main__":
    asyncio.run(serve())